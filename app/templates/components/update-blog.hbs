{{#if updateBlogForm}}
  <h4>Update Blog</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="date">Date</label>
        {{input value=date id="date"}}
      </div>

      <div class="form-group">
        <label for="content">Content</label>
        {{input value=content id="content"}}
      </div>

      <button {{action 'update' blog}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateBlogForm' blog}}>Update</button>
{{/if}}
